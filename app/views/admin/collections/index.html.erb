<h1>Collections</h1>
<%= link_to "Add", new_admin_collection_path, class: "btn btn-success" %>
<div class="row">
  <div class="col-xxl-4 col-xl-4 col-md-4 col-sm-6">
    <table class="table table-striped">
      <tr>
        <th>Collection</th>
        <th>Actions</th>
      </tr>
      <% @collections.each do |collection| %>
        <tr>
          <td><%= collection.name %></td>
          <td>
            <%= render partial: 'actions', locals: {collection: collection} %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
