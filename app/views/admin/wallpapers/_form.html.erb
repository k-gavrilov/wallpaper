<%= form_with(model: [:admin, wallpaper], action: :update, class: "form row col-xxl-6") do |form| %>
  <% if wallpaper.errors.any? %>
    <div style="color: red" class="mb-3">
      <h2><%= pluralize(wallpaper.errors.count, "error") %> prohibited this wallpaper from being saved:</h2>

      <ul>
        <% wallpaper.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :collection, class: "form-label"  %>
    <%= form.collection_select :collection_id, @collections, :id, :name, {}, { class: "form-select" } %>
  </div>
  <div class="mb-3">
    <%= form.label :keywords %>
    <%= form.text_area :keywords, class: "form-control", rows: 10%>
  </div>
  <div class="mb-3">
    <%= form.label :prompt_formula %>
    <%= form.text_area :prompt_formula, class: "form-control", rows: 10%>
  </div>
  <div class="mb-3">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>