<div class="text-center content-block d-flex flex-row flex-wrap justify-content-evenly gallery-flex px-0">
  <% wallpapers.each do |wallpaper| %>
    <div class="gallery-card">
      <%= link_to wallpaper_path(wallpaper), class: "plain-link" do %>
        <%= image_tag wallpaper.picture.variant(:preview), class: "rounded-4" %>
        <p class="mt-3">
          <%= wallpaper.title %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
<div class="d-flex flex-row-reverse pagination-flex">
  <%= paginate wallpapers %>
</div>